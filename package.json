{
  "name": "ai-companion-app",
  "version": "1.0.0",
  "description": "AI Companion web app with Express backend and React Vite frontend",
  "private": true,
  "scripts": {
    "setup": "npm install && cd backend && npm rebuild && cd ../frontend && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "test": "cd backend && npm run test"
  },
  "dependencies": {
    "@jest/globals": "30.2.0",
    "@vitejs/plugin-react": "5.1.0",
    "better-sqlite3": "12.4.1",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "concurrently": "^8.2.2",
    "cors": "2.8.5",
    "dotenv": "17.2.3",
    "express": "5.1.0",
    "fs": "0.0.1-security",
    "lucide-react": "0.548.0",
    "next": "16.0.0",
    "path": "0.12.7",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "tailwind-merge": "3.3.1",
    "tailwindcss-animate": "1.0.7",
    "uuid": "13.0.0",
    "vite": "7.1.12"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.16",
    "@types/node": "24.9.1",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "postcss": "8.5.6",
    "tailwindcss": "^4.1.9",
    "typescript": "5.9.3"
  }
}
